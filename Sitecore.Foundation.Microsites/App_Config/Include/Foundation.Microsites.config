<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/">
  <sitecore>
    <siteManager>
      <patch:attribute name="defaultProvider">dynamic</patch:attribute>
      <providers>
        <add name="dynamic" type="Sitecore.Foundation.Microsites.Providers.DynamicMicrositesProvider, Sitecore.Foundation.Microsites" siteList="sites" checkSecurity="false">
          <param desc="impl" type="Sitecore.Sites.ConfigSiteProvider, Sitecore.Kernel"/>
          <databaseName>web</databaseName>
        </add>
      </providers>
    </siteManager>  
  </sitecore>
</configuration>